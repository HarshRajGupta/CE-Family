        }
    }

    .ql a {
        height: max-content;
        width: max-content;
        padding: 0.5rem;
        margin: 13px auto;
        margin-top: 1rem;

    }

    .ql a span:nth-child(4) {
        bottom: -100%;
        left: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(360deg, transparent, var(--c));
        animation: animate4 1s linear infinite;
        animation-delay: 0.75s;
    }

    @keyframes animate4 {
        0% {
            bottom: -100%;
        }

        50%,
