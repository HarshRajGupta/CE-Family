<style>
  html,
  body {
    font-family: cursive;
    background-color: #08d9d6;
    padding: 0;
    width: 100%;
    margin: 0;
  }

  * {
    margin: 0;
    padding: 0;

  }


  input [type="file"] {
    content: "Photo";
    margin-left: 4rem;
  }

  .login-pg {
    display: grid;
    width: calc(2*350px);
    height: max-content;
    background: #141929;
    margin: 20vh auto;
    margin-bottom: 40vh;
    padding: 2rem;
    grid-gap: 1rem;
    border-radius: 25px;
    text-align: center;
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }

    50% {
      transform: rotate(180deg);
    }

    100% {
      transform: rotate(360deg);
    }
  }

  .box {
    display: grid;
    padding: 2rem;
    border: 2px solid #ff2e63;
    border-radius: 20px;
    color: #ff2e63;
    font-size: 40px;
    font-weight: 600;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
    letter-spacing: 3px;
  }

  .form {
    height: max-content;
    display: grid;
    grid-template-columns: auto auto;
    text-align: center;
    grid-gap: 4rem;
    margin-top: 3rem;
    margin: 2rem auto;
  }

  .form label,
  .upload label {
    color: #eaeaea;
    font-size: 18px;
  }

  .upload {
    width: 490px;
    display: grid;
    justify-content: space-between;
    overflow: hidden;
    margin: 0 auto;
    grid-template-columns: auto auto;
    margin-bottom: 2rem;
  }

  .box input:focus {
    color: #ff2e63;
  }

  textarea {
    margin: 0 auto;
    resize: vertical;
    min-height: 150px;
    width: 550px;
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .box input {
    width: 210px;
    height: 27px;
    text-align: center;
    border-radius: 10px;
    margin-bottom: 0;
  }

  .box img {
    margin: 2rem auto;
    width: 150px;
    animation: rotate 10s linear infinite;
  }

  .button {
    position: relative;
    display: inline-flex;
    width: 180px;
    height: 55px;
    margin: 0;
    perspective: 1000px;
    margin-bottom: 2rem;
  }

  .button button {
    font-size: 19px;
    letter-spacing: 1px;
    transform-style: preserve-3d;
    transform: translateZ(-25px);
    transition: transform 0.25s;
    font-family: "Montserrat", sans-serif;
    background: none;
    border: none;
    margin: 0;
  }

  .button button:before,
  .button button:after {
    position: absolute;
    content: "SUBMIT";
    height: 55px;
    width: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 5px solid black;
    box-sizing: border-box;
    border-radius: 5px;
  }

  .button button:before {
    color: #fff;
    background: #000;
    transform: rotateY(0deg) translateZ(25px);
  }

  .button button:after {
    color: #000;
    background: #ff2e63;
    transform: rotateX(90deg) translateZ(25px);
  }

  .button button:hover {
    transform: translateZ(-25px) rotateX(-90deg);
  }
</style>