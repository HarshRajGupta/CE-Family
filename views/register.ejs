   <style>
     html,
body {
  font-family: cursive;
  background-color: #08d9d6;
  padding: 0;
  width: 100%;
  margin: 0;
}
html {
        display: inline;
      }
      /* -+-+-+-+-+-+-+-+-+-+-Nav Bar -+-+-+-+-+-+-+-+-+-+-*/
      @import url("https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap");

      :root {
        --c: #ff2e63;
      }
      * {
        margin: 0;
        padding: 0;
      }
      
      .login-pg button {
        background: none;
        border: none;
        height: 50px;
        width: 80%;
        position: relative;
        display: inline-block;
        padding: 3px 10px;
        font-size: 20px;
        color: var(--c);
        text-decoration: none;
        text-transform: uppercase;
        transition: 0.5s;
        letter-spacing: 3px;
        overflow: hidden;
      }
      .login-pg button:hover {
        background: var(--c);
        color: #050801;
        box-shadow: 0 0 5px var(--c), 0 0 25px var(--c), 0 0 50px var(--c),
          0 0 200px var(--c);
        -webkit-box-reflect: below 1px linear-gradient(transparent, #0005);
      }
      .login-pg button:nth-child(1) {
        --c: #ff2e63;
      }
      .login-pg button span {
        position: absolute;
        display: block;
      }
      .login-pg button span:nth-child(1) {
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--c));
        animation: animate1 1s linear infinite;
      }
      @keyframes animate1 {
        0% {
          left: -100%;
        }
        50%,
        100% {
          left: 100%;
        }
      }
      .login-pg button span:nth-child(2) {
        top: -100%;
        right: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(180deg, transparent, var(--c));
        animation: animate2 1s linear infinite;
        animation-delay: 0.25s;
  
      }
      @keyframes animate2 {
        0% {
          top: -100%;
        }
        50%,
        100% {
          top: 100%;
        }
      }
      .login-pg button span:nth-child(3) {
        bottom: 0;
        right: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(270deg, transparent, var(--c));
        animation: animate3 1s linear infinite;
        animation-delay: 0.5s;
      }
      @keyframes animate3 {
        0% {
          right: -100%;
        }
        50%,
        100% {
          right: 100%;
        }
      }

      .login-pg button span:nth-child(4) {
        bottom: -100%;
        left: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(360deg, transparent, var(--c));
        animation: animate4 1s linear infinite;
        animation-delay: 0.75s;
      }
      @keyframes animate4 {
        0% {
          bottom: -100%;
        }
        50%,
        100% {
          bottom: 100%;
        }
      }

.login-pg {
  margin: 10vh auto;
  background: #141929;
  border-radius: 25px;
  display: grid;
  text-align: center;
  grid-gap: 1rem;
  padding: 2rem;
  width: 350px;
  height: max-content;
}
@keyframes rotate {
    0%{
        transform: rotate(0deg);
    }
    50%{
        transform: rotate(180deg);
    }
    100%{
        transform: rotate(360deg);
    }
}
.box {
  display: grid;
  padding: 2rem;
  border: 2px solid #ff2e63;
  border-radius: 20px;
  color: #ff2e63;
  font-size: 40px;
  font-weight: 500;
  font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
  letter-spacing: 3px;
}
form {
  height: max-content;
}
form label {
  color: #eaeaea;
  font-size: 18px;
}


.box input:focus{
    color: #ff2e63;
}

.box input {
  width: 210px;
  height: 27px;
  text-align: center;
  border-radius: 10px;
  margin-bottom: 0;
}
.box img {
  margin: 2rem auto;
  width: 150px;
  animation: rotate 10s linear infinite;
}
.button span {
  position: relative;
  display: inline-flex;
  width: 180px;
  height: 55px;
  margin: 0;
  perspective: 1000px;
}
.button span a {
  font-size: 19px;
  letter-spacing: 1px;
  transform-style: preserve-3d;
  transform: translateZ(-25px);
  transition: transform 0.25s;
  font-family: "Montserrat", sans-serif;
}
.button span a:before,
.button span a:after {
  position: absolute;
  content: "SUBMIT";
  height: 55px;
  width: 180px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 5px solid black;
  box-sizing: border-box;
  border-radius: 5px;
}
.button span a:before {
  color: #fff;
  background: #000;
  transform: rotateY(0deg) translateZ(25px);
}
.button span a:after {
  color: #000;
  background: #ff2e63;
  transform: rotateX(90deg) translateZ(25px);
}
.button span a:hover {
  transform: translateZ(-25px) rotateX(-90deg);
}

