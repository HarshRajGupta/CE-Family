@import url("https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap");

    :root {
        --c: #03e9f4;
    }

    * {
        margin: 0;
        padding: 0;

    }

    .nav-bar {
        width: 100vw;
        height: max-content;
        position: fixed;
        top: 0;
        padding: 0;
        background: linear-gradient(to left, #383a3d, #222831, #252a34);
        color: #eaeaea;
        overflow: hidden;
        z-index: 1;
    }

    .nav-bar img {
        height: 45px;
        margin: 0 auto;
    }

    .nav-bar .form {
        display: grid;
        width: 100%;
        grid-template-columns: 0.8fr 1fr 1fr 1fr 1fr 0.2fr 1fr 0.2fr;
    }

    .nav-bar a,
    .ql  {
        background: none;
        border: none;
        height: 30px;
        width: 60%;
        position: relative;
        font-size: 10px;
        color: var(--c);
        text-decoration: none;
        text-transform: uppercase;
        transition: 0.5s;
        letter-spacing: 2px;
        overflow: hidden;
        text-align: center;
        padding-top: 10px;
        padding-bottom: 0;
        margin: 0 auto;
    }

    .nav-bar a:hover,
    .ql a:hover {
        background: var(--c);
        color: #050801;
        box-shadow: 0 0 5px var(--c), 0 0 25px var(--c), 0 0 50px var(--c),
            0 0 200px var(--c);
        -webkit-box-reflect: below 1px linear-gradient(transparent, #0005);
    }

    .nav-bar a:nth-child(1),
    .contact-l {
        --c: #0ba8e6;
    }

    .nav-bar a:nth-child(2),
    .home-l {
        --c: #a8e6cf;
    }

    .nav-bar a:nth-child(3) {
        --c: #fdffab;
    }

    .nav-bar a:nth-child(4) {
        --c: #ffd3b6;
    }

    .nav-bar a:nth-child(5) {
        --c: #ffaaa5;
    }

    .nav-bar a span,
    .ql a span {
        position: absolute;
        display: block;
    }

    .nav-bar a span:nth-child(1),
    .ql a span:nth-child(1) {
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--c));
        animation: animate1 1s linear infinite;
    }

    @keyframes animate1 {
        0% {
            left: -100%;
        }

        50%,
        100% {
            left: 100%;
        }
    }

    .nav-bar a span:nth-child(2),
    .ql a span:nth-child(2) {
        top: -100%;
        right: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(180deg, transparent, var(--c));
        animation: animate2 1s linear infinite;
        animation-delay: 0.25s;
    }

    @keyframes animate2 {
        0% {
            top: -100%;
        }

        50%,
        100% {
            top: 100%;
        }
    }

    .nav-bar a span:nth-child(3),
    .ql a span:nth-child(3) {
        bottom: 0;
        right: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(270deg, transparent, var(--c));
        animation: animate3 1s linear infinite;
        animation-delay: 0.5s;
    }

    @keyframes animate3 {
        0% {
            right: -100%;
        }

        50%,
        100% {
            right: 100%;
        }
    }

    .ql a {
        height: 25px;
        width: 60%;
    }

    .nav-bar a span:nth-child(4),
    .ql a span:nth-child(4) {
        bottom: -100%;
        left: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(360deg, transparent, var(--c));
        animation: animate4 1s linear infinite;
        animation-delay: 0.75s;
    }

    @keyframes animate4 {
        0% {
            bottom: -100%;
        }

        50%,
        100% {
            bottom: 100%;
        }
    }